@model EmailService.Models.Task

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditTask</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center p-3 border bg-light"><h4>RSVP</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="AddTask" method="post">
                <div asp-validation-summary="All"></div>
                <div class="container">
  <div class="row justify-content-md-center">
    <div class="col col-sm-2">

    </div>
    <div class="col-md offset-md p-5">
                <div class="p-1">
                    <label asp-for="Name">Task name:</label>
                    <input class="form-control" asp-for="Name" />
                </div>
                <div class="p-1">
                    <label asp-for="Title">Task Title:</label>
                    <input class="form-control" asp-for="Title" />
                </div>
                <div class="p-1">
                    <label asp-for="Start">Input start date in this format: "2022.07.11 12:43"</label>
                    <input class="form-control" asp-for="Start"/>
                </div>
                <div class="p-1">
                    <label asp-for="CronPeriod">Input period in cron format:"0/1 12 * * *"(m H D M Y): </label>
                    <input class="form-control" asp-for="@Model.CronPeriod"/>
                </div>
                <div class="p-1">
                    <label>Choose the Api</label>
                    <select class="form-control" asp-for="Api">
                        <option value="1">Wather</option>
                        <option value="2">Crypto Currency Rate</option>
                        <option value="3">Great Quotes</option>
                    </select>
                    <label>Choose the Api Option</label>
                    <select class="form-control" asp-for="@Model.ApiOption">
                        <option value="1">Wather: Minsk or CryptoCyrrency: Bitcoin</option>
                        <option value="2">Wather: Warsaw or CryptoCyrrency: Etherium</option>
                        <option value="3">Wather: New York or CryptoCyrrency: Litecoin</option>
                    </select>
                </div>
                <a type ="button" class ="btn btn-danger" asp-action = "TaskList" asp-route-TaskId = "@Model.TaskId" asp-route-Name = "@Model.Name">Delete</a>

    </div>
    <div class="col col-sm-2">
    </div>
  </div>
</div>
                <div class ="p-3">
                    <div class="text-center">
                        
                    <button type="submit">submit</button>
                    
                    </div>
                    
                </div>
                
            </form>
        </div>
    </div>
</body>
</html>